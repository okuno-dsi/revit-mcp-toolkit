<Window x:Class="CodexGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Codex GUI" Height="600" Width="1170"
        Background="Transparent"
        Foreground="#FFF5F5F5"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">

    <!-- Taskbar indicator overlay (visible even when the window is behind other windows) -->
    <Window.Resources>
        <!-- 16x16 overlay icon: red dot with dark ring -->
        <DrawingImage x:Key="BusyOverlayIcon">
            <DrawingImage.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="#FFFF4444">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="8,8" RadiusX="6" RadiusY="6"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing>
                        <GeometryDrawing.Pen>
                            <Pen Brush="#FF222222" Thickness="2"/>
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="8,8" RadiusX="6" RadiusY="6"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>
    </Window.Resources>

    <Window.TaskbarItemInfo>
        <shell:TaskbarItemInfo x:Name="MainTaskbarItemInfo" ProgressState="None"/>
    </Window.TaskbarItemInfo>

    <Grid x:Name="WindowRoot">
        <Grid Margin="8" x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6"/>
            <RowDefinition x:Name="PromptRow" Height="240" MinHeight="160"/>
        </Grid.RowDefinitions>

        <!-- Backdrop tint layer (only this gets transparent via slider) -->
        <Border x:Name="BackdropBorder"
                Grid.RowSpan="4"
                Background="Transparent"
                CornerRadius="6">
            <Border.Effect>
                <BlurEffect Radius="0" />
            </Border.Effect>
        </Border>

        <!-- Session controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,8">
            <TextBlock Text="セッション:" VerticalAlignment="Center" Margin="0,0,4,0"/>
            <ComboBox x:Name="SessionComboBox" Width="200" Margin="0,0,8,0"
                      SelectionChanged="SessionComboBox_OnSelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayName}" ToolTip="{Binding Name}"
                                   TextTrimming="CharacterEllipsis"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button x:Name="NewSessionButton" Content="新しいセッション" Width="110" Margin="0,0,8,0"
                    Click="NewSessionButton_OnClick"/>
            <Button x:Name="RenameSessionButton" Content="名前変更" Width="90" Margin="0,0,8,0"
                    Click="RenameSessionButton_OnClick"/>
            <Button x:Name="DeleteSessionButton" Content="削除" Width="70"
                    Click="DeleteSessionButton_OnClick"/>

            <Button x:Name="ChatMonitorButton" Content="Chat" Width="70" Margin="0,0,8,0"
                    Click="ChatMonitorButton_OnClick"
                    ToolTip="Revit MCP Chat Monitor を開きます（MCPサーバーの chat.* をポーリング）"/>
            <Button x:Name="CaptureButton" Content="Capture" Width="80" Margin="0,0,8,0"
                    Click="CaptureButton_OnClick"
                    ToolTip="スクリーンショット取得→同意（承認）した画像だけを次の Codex 実行に添付します（--image）"/>
            <TextBlock x:Name="AttachedImagesCountTextBlock"
                       Text=""
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       FontFamily="Consolas"
                       FontSize="10"
                       Margin="0,0,8,0"/>

            <TextBlock Text="  フォント:" VerticalAlignment="Center" Margin="12,0,4,0"/>
            <ComboBox x:Name="FontFamilyComboBox" Width="120" Margin="0,0,4,0" VerticalAlignment="Center">
                <ComboBoxItem Content="Meiryo"/>
                <ComboBoxItem Content="Segoe UI"/>
                <ComboBoxItem Content="Consolas"/>
            </ComboBox>
            <TextBox x:Name="FontSizeTextBox" Width="40" Margin="0,0,4,0" VerticalAlignment="Center"/>
            <Button x:Name="ApplyFontButton" Content="適用" Width="60" VerticalAlignment="Center"
                    Click="ApplyFontButton_OnClick"/>
        </StackPanel>

        <!-- Custom caption buttons overlay (top-right) -->
        <Button x:Name="CloseButton"
                Grid.Row="0"
                Content="X"
                Width="28" Height="24"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,0,0,0"
                Click="CloseButton_OnClick"/>

        <!-- History + Conversation -->
        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Prompt history -->
            <GroupBox x:Name="PromptHistoryGroupBox" Grid.Column="0" Header="過去のプロンプト" Margin="0,0,8,0" Background="Transparent">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                        <Button x:Name="UsePromptButton" Content="使用" Width="60" Margin="0,0,4,0"
                                Click="UsePromptButton_OnClick"/>
                        <Button x:Name="EditPromptButton" Content="編集" Width="60" Margin="0,0,4,0"
                                Click="EditPromptButton_OnClick"/>
                        <Button x:Name="DeletePromptButton" Content="削除" Width="60"
                                Click="DeletePromptButton_OnClick"/>
                    </StackPanel>
                    <TabControl x:Name="PromptHistoryTab"
                                DockPanel.Dock="Top"
                                Margin="0,0,0,4"
                                SelectionChanged="PromptHistoryTab_OnSelectionChanged">
                        <TabItem Header="セッション">
                            <ListBox x:Name="PromptHistoryListBox"
                                     Margin="0,0,0,4"
                                     SelectionMode="Extended"
                                     Background="Transparent"
                                     MouseDoubleClick="PromptHistoryListBox_OnMouseDoubleClick">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Foreground"
                                                Value="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=Foreground}"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   TextWrapping="NoWrap"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </TabItem>
                        <TabItem Header="すべて">
                            <ListBox x:Name="AllPromptHistoryListBox"
                                     Margin="0,0,0,4"
                                     SelectionMode="Extended"
                                     Background="Transparent"
                                     MouseDoubleClick="AllPromptHistoryListBox_OnMouseDoubleClick">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Foreground"
                                                Value="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=Foreground}"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Display}"
                                                   TextWrapping="NoWrap"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </TabItem>
                    </TabControl>
                </DockPanel>
            </GroupBox>

            <!-- Conversation log + overlay for fall animation + trace -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition x:Name="TraceSplitterRow" Height="6"/>
                    <RowDefinition x:Name="TraceRow" Height="160"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBox x:Name="ConversationTextBox"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled"
                             AcceptsReturn="True"
                             Background="#FF1E1E1E"
                             Foreground="#FFF5F5F5"
                             BorderBrush="#FF444444"/>
                    <Canvas x:Name="ConversationOverlayCanvas"
                            Background="Transparent"
                            ClipToBounds="True"
                            IsHitTestVisible="False"/>
                </Grid>

                <GridSplitter x:Name="TraceSplitter"
                              Grid.Row="1"
                              Height="6"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              ResizeDirection="Rows"
                              ResizeBehavior="PreviousAndNext"
                              ShowsPreview="True"
                              Background="#FF222222"
                              DragCompleted="TraceSplitter_OnDragCompleted"/>

                <!-- Less prominent raw Codex CLI output ("thinking/exec/logs") -->
                <Expander x:Name="TraceExpander"
                          Grid.Row="2"
                          Header="Trace (thinking/exec)"
                          IsExpanded="True"
                          Expanded="TraceExpander_OnExpanded"
                          Collapsed="TraceExpander_OnCollapsed"
                          Margin="0,0,0,0"
                          Background="#FF171717"
                          BorderBrush="#FF333333">
                    <TextBox x:Name="TraceTextBox"
                             IsReadOnly="True"
                             TextWrapping="NoWrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             AcceptsReturn="True"
                             FontFamily="Consolas"
                             FontSize="10"
                             FontStyle="Italic"
                             Background="Transparent"
                             Foreground="#FF7A7A7A"
                             BorderBrush="#FF333333"/>
                </Expander>
            </Grid>
        </Grid>

        <!-- Prompt height splitter (drag up/down to resize the input area) -->
        <GridSplitter x:Name="PromptSplitter"
                      Grid.Row="2"
                      Height="6"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      ResizeDirection="Rows"
                      ResizeBehavior="PreviousAndNext"
                      ShowsPreview="True"
                      Background="#FF222222"/>

        <!-- Prompt input + send -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="80"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="PromptTextBox"
                     Grid.Row="0"
                     Margin="0,0,0,4"
                     MinHeight="80"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     Background="#FF252525"
                     Foreground="#FFF5F5F5"
                     BorderBrush="#FF555555"/>

             <Grid Grid.Row="1"
                   HorizontalAlignment="Stretch"
                   Margin="0,0,0,0">
                 <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="Auto"/>
                     <ColumnDefinition Width="Auto"/>
                     <ColumnDefinition Width="Auto"/>
                 </Grid.ColumnDefinitions>

                <!-- Enter button: 左端から HAL までをフルに使う -->
                <Button x:Name="SendButton"
                        Grid.Column="0"
                        Content="Enter"
                        FontWeight="Bold"
                        Height="30"
                        Margin="0,0,8,0"
                        HorizontalAlignment="Stretch"
                        Click="SendButton_OnClick"/>

                <!-- Stop button: same as ESC (cancel current run) -->
                <Button x:Name="StopButton"
                        Grid.Column="1"
                        Content="Stop"
                        Width="70"
                        Height="30"
                        Margin="0,0,8,0"
                        Click="StopButton_OnClick"
                        ToolTip="実行中の処理を停止します（ESC と同じ）"/>

                <!-- HAL eye -->
                <Border x:Name="HalEyeBorder"
                        Grid.Column="2"
                        Width="50"
                        Height="50"
                        Margin="0,0,8,0"
                        Background="Transparent"
                        BorderBrush="#555555"
                        BorderThickness="1"
                        MouseLeftButtonDown="HalEyeBorder_OnMouseLeftButtonDown"
                        Visibility="Visible">
                    <Grid>
                        <!-- Outer dark disc -->
                        <Ellipse Fill="#222222"/>
                        <!-- Silver ring -->
                        <Ellipse Margin="8"
                                 Stroke="#B0B0B0"
                                 StrokeThickness="4"/>
                        <!-- Inner red lens (animated only while Codex is busy) -->
                        <Ellipse x:Name="HalRedEllipse"
                                 Margin="18"
                                 Visibility="Collapsed"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#FFFF4444" Offset="0.0"/>
                                    <GradientStop Color="#FFAA0000" Offset="0.4"/>
                                    <GradientStop Color="#66000000" Offset="1.0"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>
                 </Border>
 
                 <!-- Busy time indicator (HAL right side) -->
                 <TextBlock x:Name="BusyIndicatorTextBlock"
                            Grid.Column="3"
                            Margin="0,0,8,0"
                            FontSize="16"
                            Background="Transparent"
                            VerticalAlignment="Center"
                            FontFamily="Consolas"/>
             </Grid>

            <!-- Simplified controls + opacity + hidden advanced setting controls -->
            <Grid Grid.Row="2" Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                    <Button x:Name="InitialPromptSettingsButton"
                            Content="初期設定"
                            Width="90"
                            Margin="0,0,8,0"
                            Click="InitialPromptSettingsButton_OnClick"
                            ToolTip="初回送信時の固定初期プロンプトと、ユーザー追加分を設定します。"/>
                    <Button x:Name="OpenSettingsButton"
                            Content="設定"
                            Width="70"
                            Click="OpenSettingsButton_OnClick"
                            ToolTip="モデル/推論/Profile/色/Session ID などの詳細設定を開きます。"/>
                </StackPanel>

                <WrapPanel Grid.Column="1"
                           Orientation="Horizontal"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0">
                    <TextBlock Text="Opacity" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <Slider x:Name="OpacitySlider"
                            Width="150"
                            Minimum="0.1"
                            Maximum="1.0"
                            Value="0.9"
                            TickFrequency="0.05"
                            IsSnapToTickEnabled="True"
                            ValueChanged="OpacitySlider_OnValueChanged"/>
                    <TextBlock Text="{Binding ElementName=OpacitySlider, Path=Value, StringFormat='{}{0:F2}'}"
                               VerticalAlignment="Center" Margin="4,0,16,0" FontSize="10"/>

                    <TextBlock Text="BG" VerticalAlignment="Center" Margin="0,0,4,0" Visibility="Collapsed"/>
                    <TextBox x:Name="BgColorTextBox" Width="90" Text="#122445" Margin="0,0,8,0" Visibility="Collapsed"/>
                    <TextBlock Text="FG" VerticalAlignment="Center" Margin="0,0,4,0" Visibility="Collapsed"/>
                    <TextBox x:Name="FgColorTextBox" Width="90" Text="#C0C0C0" Margin="0,0,8,0" Visibility="Collapsed"/>
                    <Button x:Name="ApplyColorsButton" Content="Apply" Width="70" Click="ApplyColorsButton_OnClick" Visibility="Collapsed"/>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="60,0,0,0"
                                Visibility="Collapsed">
                        <TextBlock Text="Session ID:" VerticalAlignment="Center" Margin="0,0,4,0" FontSize="10"/>
                        <TextBlock x:Name="SessionIdTextBlock"
                                   VerticalAlignment="Center"
                                   FontSize="10"
                                   Foreground="Gray"/>
                        <Button x:Name="ShowSessionIdButton"
                                Content="ID表示"
                                Width="90"
                                Height="20"
                                Margin="8,0,0,0"
                                Padding="6,0"
                                VerticalAlignment="Center"
                                Click="ShowSessionIdButton_OnClick"
                                ToolTip="Codex セッションIDを表示します（コピー可）"/>
                    </StackPanel>
                </WrapPanel>

                <!-- Busy time indicator + RevitMCP progress (from %LOCALAPPDATA%\\RevitMCP\\progress\\progress_<port>.jsonl) -->
                <StackPanel Grid.Column="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <ProgressBar x:Name="RevitProgressBar"
                                 Width="120"
                                 Height="8"
                                 Margin="0,0,10,0"
                                 Minimum="0"
                                 Maximum="100"
                                 IsIndeterminate="True"
                                 VerticalAlignment="Center"
                                 Visibility="Collapsed"/>

                    <TextBlock x:Name="RevitProgressTextBlock"
                               Margin="0,0,0,0"
                               FontSize="12"
                               FontFamily="Consolas"
                               TextWrapping="NoWrap"
                               TextTrimming="CharacterEllipsis"
                               MaxWidth="170"
                               Foreground="#FF7A7A7A"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"/>
                </StackPanel>

                <!-- Keep existing controls in the visual tree for compatibility; managed from Settings dialog -->
                <StackPanel x:Name="AdvancedSettingsHiddenPanel"
                            Grid.ColumnSpan="4"
                            Visibility="Collapsed"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <TextBlock Text="モデル:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <ComboBox x:Name="ModelComboBox"
                              Width="170"
                              Margin="0,0,4,0"
                              IsEditable="True"
                              IsTextSearchEnabled="False"
                              LostKeyboardFocus="ModelComboBox_OnLostKeyboardFocus"
                              ToolTip="Codex モデル名（例: gpt-4.1, gpt-4.1-mini など）。空欄=デフォルト。"/>
                    <Button x:Name="ClearModelButton"
                            Content="Default"
                            Width="70"
                            Margin="0,0,8,0"
                            Click="ClearModelButton_OnClick"
                            ToolTip="モデル指定をクリアします（空欄=デフォルト）。"/>
                    <Button x:Name="RefreshModelsButton"
                            Content="Refresh"
                            Width="70"
                            Margin="0,0,12,0"
                            Click="RefreshModelsButton_OnClick"
                            ToolTip="~/.codex/config.toml を再読込して、モデル候補を更新します。"/>

                    <TextBlock Text="推論:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <ComboBox x:Name="ReasoningEffortComboBox"
                              Width="100"
                              Margin="0,0,4,0"
                              IsEditable="True"
                              IsTextSearchEnabled="False"
                              LostKeyboardFocus="ReasoningEffortComboBox_OnLostKeyboardFocus"
                              ToolTip="model_reasoning_effort（例: low/medium/high/xhigh）。空欄=デフォルト。"/>
                    <Button x:Name="ClearReasoningEffortButton"
                            Content="Default"
                            Width="70"
                            Margin="0,0,12,0"
                            Click="ClearReasoningEffortButton_OnClick"
                            ToolTip="推論レベル指定をクリアします（空欄=デフォルト）。"/>

                    <TextBlock Text="Profile:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <ComboBox x:Name="ProfileComboBox"
                              Width="90"
                              Margin="0,0,4,0"
                              IsEditable="True"
                              IsTextSearchEnabled="False"
                              LostKeyboardFocus="ProfileComboBox_OnLostKeyboardFocus"
                              ToolTip="Codex プロファイル名（例: fast/live/safe）。空欄=デフォルト。"/>
                    <Button x:Name="ClearProfileButton"
                            Content="Default"
                            Width="70"
                            Margin="0,0,12,0"
                            Click="ClearProfileButton_OnClick"
                            ToolTip="プロファイル指定をクリアします（空欄=デフォルト）。"/>

                    <Button x:Name="StatusButton" Content="Status" Width="70"
                            Click="StatusButton_OnClick"
                            ToolTip="Codex 側のステータス取得用プロンプトを送信します"/>
                </StackPanel>
            </Grid>
         </Grid>
        </Grid>

        <!-- Resize handles (Thumbs) -->
        <Thumb x:Name="ResizeLeftThumb"
               Width="8"
               HorizontalAlignment="Left"
               VerticalAlignment="Stretch"
               Cursor="SizeWE"
               Background="Transparent"
               DragDelta="ResizeLeftThumb_OnDragDelta"/>
        <Thumb x:Name="ResizeRightThumb"
               Width="8"
               HorizontalAlignment="Right"
               VerticalAlignment="Stretch"
               Cursor="SizeWE"
               Background="Transparent"
               DragDelta="ResizeRightThumb_OnDragDelta"/>
        <Thumb x:Name="ResizeTopThumb"
               Height="8"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Top"
               Cursor="SizeNS"
               Background="Transparent"
               DragDelta="ResizeTopThumb_OnDragDelta"/>
        <Thumb x:Name="ResizeBottomThumb"
               Height="8"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Bottom"
               Cursor="SizeNS"
               Background="Transparent"
               DragDelta="ResizeBottomThumb_OnDragDelta"/>
        <Thumb x:Name="ResizeTopLeftThumb"
               Width="8"
               Height="8"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Cursor="SizeNWSE"
               Background="Transparent"
               DragDelta="ResizeTopLeftThumb_OnDragDelta"/>
        <Thumb x:Name="ResizeTopRightThumb"
               Width="8"
               Height="8"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Cursor="SizeNESW"
               Background="Transparent"
               DragDelta="ResizeTopRightThumb_OnDragDelta"/>
        <Thumb x:Name="ResizeBottomLeftThumb"
               Width="8"
               Height="8"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom"
               Cursor="SizeNESW"
               Background="Transparent"
               DragDelta="ResizeBottomLeftThumb_OnDragDelta"/>
        <Thumb x:Name="ResizeBottomRightThumb"
               Width="8"
               Height="8"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Cursor="SizeNWSE"
               Background="Transparent"
               DragDelta="ResizeBottomRightThumb_OnDragDelta"/>
    </Grid>
</Window>



