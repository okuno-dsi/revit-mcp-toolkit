<Window x:Class="CodexGui.InitialPromptEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="初期設定"
        Height="620"
        Width="980"
        MinHeight="500"
        MinWidth="760"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="0,0,0,8"
                   TextWrapping="Wrap"
                   Text="初回送信時に Codex へ自動付与される初期プロンプトです。固定部は編集できません。ユーザー追記分のみ編集・削除できます。"/>

        <GroupBox Grid.Row="1"
                  Header="固定初期プロンプト（編集不可）"
                  Margin="0,0,0,8">
            <TextBox x:Name="BasePromptTextBox"
                     IsReadOnly="True"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     FontSize="12"
                     Background="#11000000"/>
        </GroupBox>

        <GroupBox Grid.Row="2"
                  Header="ユーザー追記（編集可）"
                  Margin="0,0,0,8">
            <TextBox x:Name="UserAppendPromptTextBox"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     FontSize="12"/>
        </GroupBox>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="ClearUserAppendButton"
                    Content="追記をクリア"
                    Width="110"
                    Margin="0,0,8,0"
                    Click="ClearUserAppendButton_OnClick"/>
            <Button x:Name="SaveButton"
                    Content="保存"
                    Width="90"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Click="SaveButton_OnClick"/>
            <Button x:Name="CancelButton"
                    Content="キャンセル"
                    Width="90"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
