<Window x:Class="CodexGui.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定"
        SizeToContent="Height"
        Width="760"
        MinHeight="320"
        MinWidth="680"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap"
                   Text="Codex 実行設定と見た目設定です。透明度はメイン画面のスライダーで調整します。"/>

        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="モデル" VerticalAlignment="Center"/>
            <ComboBox x:Name="ModelComboBox"
                      Grid.Column="1"
                      Margin="6,0,8,0"
                      IsEditable="True"
                      IsTextSearchEnabled="False"/>
            <Button x:Name="ModelDefaultButton"
                    Grid.Column="2"
                    Content="Default"
                    Width="76"
                    Margin="0,0,8,0"
                    Click="ModelDefaultButton_OnClick"/>
            <Button x:Name="ModelRefreshButton"
                    Grid.Column="3"
                    Content="Refresh"
                    Width="76"
                    Click="ModelRefreshButton_OnClick"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="推論" VerticalAlignment="Center"/>
            <ComboBox x:Name="ReasoningComboBox"
                      Grid.Column="1"
                      Margin="6,0,8,0"
                      IsEditable="True"
                      IsTextSearchEnabled="False"/>
            <Button x:Name="ReasoningDefaultButton"
                    Grid.Column="2"
                    Content="Default"
                    Width="76"
                    Click="ReasoningDefaultButton_OnClick"/>
        </Grid>

        <Grid Grid.Row="3" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Profile" VerticalAlignment="Center"/>
            <ComboBox x:Name="ProfileComboBox"
                      Grid.Column="1"
                      Margin="6,0,8,0"
                      IsEditable="True"
                      IsTextSearchEnabled="False"/>
            <Button x:Name="ProfileDefaultButton"
                    Grid.Column="2"
                    Content="Default"
                    Width="76"
                    Click="ProfileDefaultButton_OnClick"/>
        </Grid>

        <Grid Grid.Row="4" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="色設定" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="BG" VerticalAlignment="Center"/>
            <TextBox x:Name="BgColorTextBox" Grid.Column="2" Margin="6,0,12,0"/>
            <TextBlock Grid.Column="3" Text="FG" VerticalAlignment="Center"/>
            <TextBox x:Name="FgColorTextBox" Grid.Column="4" Margin="6,0,12,0"/>
        </Grid>

        <Grid Grid.Row="5" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Session ID" VerticalAlignment="Center"/>
            <TextBox x:Name="SessionIdTextBox"
                     Grid.Column="1"
                     Margin="6,0,8,0"
                     IsReadOnly="True"
                     VerticalContentAlignment="Center"
                     FontFamily="Consolas"/>
            <Button x:Name="ShowSessionIdButton"
                    Grid.Column="2"
                    Content="ID表示"
                    Width="90"
                    Click="ShowSessionIdButton_OnClick"/>
        </Grid>

        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="StatusButton"
                    Content="Status送信"
                    Width="100"
                    Margin="0,0,8,0"
                    Click="StatusButton_OnClick"/>
            <Button x:Name="SaveButton"
                    Content="保存"
                    Width="90"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Click="SaveButton_OnClick"/>
            <Button x:Name="CancelButton"
                    Content="キャンセル"
                    Width="90"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
