<Window x:Class="CodexGui.CaptureConsentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Capture (Consent Gate)"
        Height="640"
        Width="980"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="ToolWindow">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,8" LastChildFill="True">
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBox x:Name="PortTextBox" Width="72" Margin="0,0,12,0" IsReadOnly="True"/>

                <TextBlock Text="Target:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <ComboBox x:Name="TargetComboBox" Width="180" Margin="0,0,12,0">
                    <ComboBoxItem Content="Revit dialogs (active_dialogs)" Tag="active_dialogs" IsSelected="True"/>
                    <ComboBoxItem Content="Revit main window (main)" Tag="main"/>
                    <ComboBoxItem Content="Revit floating windows (floating_windows)" Tag="floating_windows"/>
                    <ComboBoxItem Content="Revit all visible (all_visible)" Tag="all_visible"/>
                    <ComboBoxItem Content="Full screen (screen)" Tag="screen"/>
                </ComboBox>

                <Button x:Name="CaptureButton" Content="Capture" Width="90" Click="CaptureButton_OnClick"/>
            </StackPanel>

            <TextBlock x:Name="StatusTextBlock" Foreground="Gray" VerticalAlignment="Center" Margin="12,0,0,0"/>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Captured Images (select to attach)" Grid.Column="0" Margin="0,0,8,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Margin="0,0,0,6"
                               Foreground="Gray"
                               TextWrapping="Wrap">
                        These screenshots are local files. Nothing is sent to Codex until you explicitly approve.
                        High-risk captures (likely drawing/model canvas) are unchecked by default.
                    </TextBlock>
                    <ListBox x:Name="CapturesListBox"
                             SelectionMode="Single"
                             HorizontalContentAlignment="Stretch"
                             SelectionChanged="CapturesListBox_OnSelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0,0,0,1" BorderBrush="#222222" Padding="6">
                                    <DockPanel LastChildFill="True">
                                        <CheckBox IsChecked="{Binding IsSelected}" DockPanel.Dock="Left" VerticalAlignment="Top" Margin="0,0,8,0"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" TextWrapping="Wrap"/>
                                            <TextBlock Foreground="Gray" FontSize="11" TextWrapping="Wrap">
                                                <Run Text="{Binding RiskLabel, Mode=OneWay}"/>
                                                <Run Text="  |  "/>
                                                <Run Text="{Binding Path}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="Preview" Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" BorderBrush="#333333" BorderThickness="1" Background="#111111">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <Image x:Name="PreviewImage" Stretch="None" />
                        </ScrollViewer>
                    </Border>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button x:Name="OpenImageButton" Content="Open" Width="90" Margin="0,0,8,0" Click="OpenImageButton_OnClick"/>
                        <Button x:Name="OpenFolderButton" Content="Open Folder" Width="110" Margin="0,0,8,0" Click="OpenFolderButton_OnClick"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="DenyButton" Content="Deny (Default)" Width="140" Margin="0,0,8,0" IsDefault="True" IsCancel="True"/>
            <Button x:Name="ApproveButton" Content="Approve Selected" Width="160" Click="ApproveButton_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
