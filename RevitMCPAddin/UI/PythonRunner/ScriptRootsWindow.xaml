<Window x:Class="RevitMCPAddin.UI.PythonRunner.ScriptRootsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Script Roots" Height="420" Width="640"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" TextWrapping="Wrap" Foreground="Gray"
                   Text="Python Runner が検索するフォルダを管理します。デフォルトのプロジェクト用フォルダは常に対象です。"/>

        <ListBox x:Name="ListRoots" Grid.Row="1" Margin="0,8,0,8"/>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right">
            <Button x:Name="BtnAdd" Content="Add..." Width="90" Margin="0,0,6,0"/>
            <Button x:Name="BtnRemove" Content="Remove" Width="90" Margin="0,0,12,0"/>
            <Button x:Name="BtnOk" Content="OK" Width="90" Margin="0,0,6,0"/>
            <Button x:Name="BtnCancel" Content="Cancel" Width="90"/>
        </WrapPanel>
    </Grid>
</Window>
