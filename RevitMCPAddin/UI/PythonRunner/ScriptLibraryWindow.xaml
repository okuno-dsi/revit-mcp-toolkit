<Window x:Class="RevitMCPAddin.UI.PythonRunner.ScriptLibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Python Script Library" Height="650" Width="1000"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Keyword Filter" Margin="0,0,6,0"/>
            <TextBox x:Name="TxtFilter" Grid.Column="1" MinWidth="220" Margin="0,0,8,0"/>
            <Button x:Name="BtnApplyFilter" Grid.Column="2" Content="Filter" Width="80" Margin="0,0,6,0"/>
            <Button x:Name="BtnClearFilter" Grid.Column="3" Content="Clear" Width="80" Margin="0,0,6,0"/>
            <Button x:Name="BtnSortKeyword" Grid.Column="4" Content="Sort by Keyword" Width="120" Margin="0,0,6,0"/>
            <Button x:Name="BtnRefresh" Grid.Column="5" Content="Refresh" Width="80" Margin="0,0,6,0"/>
            <Button x:Name="BtnAddFolder" Grid.Column="6" Content="Add Folder" Width="110" Margin="0,0,6,0"/>
            <Button x:Name="BtnAddFile" Grid.Column="7" Content="Add File" Width="90" Margin="0,0,6,0"/>
            <Button x:Name="BtnManageRoots" Grid.Column="8" Content="Roots..." Width="90"/>
        </Grid>

        <DataGrid x:Name="GridItems"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserSortColumns="True"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="2*"/>
                <DataGridTextColumn Header="Feature" Binding="{Binding Feature}" Width="2*"/>
                <DataGridTextColumn Header="Keywords" Binding="{Binding Keywords}" Width="2*"/>
                <DataGridTextColumn Header="Folder" Binding="{Binding Folder}" Width="3*"/>
                <DataGridTextColumn Header="Modified" Binding="{Binding LastWriteTime}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="BtnOpen" Content="Open" Width="90" Margin="0,0,6,0"/>
            <Button x:Name="BtnEdit" Content="Edit" Width="90" Margin="0,0,6,0"/>
            <Button x:Name="BtnDelete" Content="Remove" Width="90" Margin="0,0,6,0"/>
            <Button x:Name="BtnReveal" Content="Open Folder" Width="110"/>
        </WrapPanel>
    </Grid>
</Window>
