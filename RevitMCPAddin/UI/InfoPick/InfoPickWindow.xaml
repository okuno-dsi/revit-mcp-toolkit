<Window x:Class="RevitMCPAddin.UI.InfoPick.InfoPickWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pick Info"
        Height="560"
        Width="860"
        MinHeight="420"
        MinWidth="680"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Name="StartPointCaptureButton" Width="140" Margin="0,0,8,0" Click="StartPointCapture_Click">Start Point Capture</Button>
            <Button Name="StartElementCaptureButton" Width="150" Margin="0,0,8,0" Click="StartElementCapture_Click">Start Element Capture</Button>
            <Button Name="FinishCaptureButton" Width="120" Margin="0,0,8,0" Click="FinishCapture_Click">Finish Capture</Button>
            <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center" Foreground="Gray"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All"
                  Margin="0,0,0,8">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Exclude" Binding="{Binding Excluded}" Width="70"/>
                <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="40" IsReadOnly="True"/>
                <DataGridTextColumn Header="Kind" Binding="{Binding Kind}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="160" IsReadOnly="True"/>
                <DataGridTextColumn Header="ElementId" Binding="{Binding ElementId}" Width="90" IsReadOnly="True"/>
                <DataGridTextColumn Header="Type" Binding="{Binding TypeName}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="XYZ (mm)" Binding="{Binding XyzMm}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Name="CopyButton" Width="90" Margin="0,0,8,0" Click="Copy_Click">Copy</Button>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="90" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click">OK</Button>
                <Button Width="90" Click="Cancel_Click">Cancel</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
